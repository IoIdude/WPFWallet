<Window x:Class="Crypto.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Crypto"
      mc:Ignorable="d" 
      Height="450" Width="800"
      Title="Profile">

    <Grid>
        <TextBlock Name="Sum" HorizontalAlignment="Left" Margin="48,102,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock Name="Address" HorizontalAlignment="Left" Margin="48,196,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock Name="Key" HorizontalAlignment="Left" Margin="48,288,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Label Content="Address:" HorizontalAlignment="Left" Margin="46,170,0,0" VerticalAlignment="Top"/>
        <Label Content="Sum:" HorizontalAlignment="Left" Margin="46,72,0,0" VerticalAlignment="Top"/>
        <Label Content="Key:" HorizontalAlignment="Left" Margin="46,258,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.414,0.5"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="368,370,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>